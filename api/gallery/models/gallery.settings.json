{
  "kind": "collectionType",
  "collectionName": "galleries",
  "info": {
    "name": "Gallery"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "Title": {
      "type": "string",
      "required": true,
      "maxLength": 30
    },
    "Subtitle": {
      "type": "string",
      "maxLength": 50
    },
    "Text": {
      "type": "richtext",
      "required": true
    },
    "Main_picture": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "Pictures": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
